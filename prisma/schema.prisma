generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  username     String
  email        String    @unique
  password     String
  avatar       String?
  access_token String?
  last_login   DateTime?
  is_deleted   Boolean   @default(false)

  deleted_at DateTime?
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt

  @@map("users")
}
